<PropertyList>

    <key n="79">
        <name>O</name>
        <desc>Open aerotow hook</desc>
        <binding>
          <command>nasal</command>
          <script>towing.releaseHitch("aerotow")</script>
        </binding>
    </key>

    <key n="91">
        <name>[</name>
        <desc>Flaps Up</desc>
        <binding>
            <command>nasal</command>
            <script>
              var flapset = getprop("/controls/flight/flaps");
              if (flapset > 0) {
                setprop("/controls/flight/flaps", getprop("/controls/flight/flaps")-.5);
              }
            </script>
        </binding>
    </key>

    <key n="93">
        <name>]</name>
        <desc>Flaps Down</desc>
        <binding>
            <command>nasal</command>
            <script>
              var flapset = getprop("/controls/flight/flaps");
              if (1 > flapset) {
                setprop("/controls/flight/flaps", getprop("/controls/flight/flaps")+.5);
              }
            </script>
        </binding>
    </key>

    <key n="100">
        <name>d</name>
        <desc>Open/Close door</desc>
        <binding>
            <command>nasal</command>
            <script>
                if (getprop("sim/multiplay/generic/float[1]") == 0)
                    j3cub.rightWindow.toggle();
                j3cub.rightDoor.toggle();
            </script>
        </binding>
    </key>

    <key n="119">
        <name>d</name>
        <desc>Open/Close window</desc>
        <binding>
            <command>nasal</command>
            <script>
                j3cub.rightWindow.toggle();
            </script>
        </binding>
    </key>

    <key n="101">
        <name>e</name>
        <desc>Release Hopper Contents</desc>
        <binding>
            <command>property-assign</command>
            <property>controls/armament/trigger</property>
            <value>1</value>
        </binding>
        <mod-up>
        <binding>
            <command>property-assign</command>
            <property>controls/armament/trigger</property>
            <value>0</value>
        </binding>
        </mod-up>
    </key>

    <key n="111">
        <name>o</name>
        <desc>Lock aerotow hook</desc>
        <binding>
            <command>property-assign</command>
            <property>/sim/hitches/aerotow/open</property>
            <value type="bool">false</value>
        </binding>
        <binding>
            <command>property-assign</command>
            <property>sim/model/j3cub/aerotowhitch</property>
            <value type="bool">false</value>
        </binding>
    </key>

    <key n="114">
        <name>r</name>
        <desc>Water Rudders Up</desc>
        <binding>
            <command>property-assign</command>
            <property>/controls/gear/water-rudder</property>
            <value type="bool">false</value>
        </binding>
    </key>

    <key n="82">
        <name>R</name>
        <desc>Water Rudders Down</desc>
        <binding>
            <command>property-assign</command>
            <property>/controls/gear/water-rudder</property>
            <value type="bool">true</value>
        </binding>
    </key>
</PropertyList>
