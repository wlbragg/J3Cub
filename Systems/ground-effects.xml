            </and>
        </input>
        <output>
            <property>/sim/model/j3cub/securing/tiedownR-addable</property>
        </output>
    </logic>

    <logic>
        <name>Tail Tiedowns Addable</name>
        <input>
            <and>
                <not>
                    <property>/sim/model/j3cub/securing/tiedownT-visible</property>
