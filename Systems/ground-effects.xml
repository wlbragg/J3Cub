                <property>/sim/model/j3cub/securing/tiedowns-can-have</property>
            </and>
        </input>
        <output>
            <property>/sim/model/j3cub/securing/tiedownL-addable</property>
        </output>
    </logic>

    <logic>
        <name>Right Tiedowns Addable</name>
        <input>
