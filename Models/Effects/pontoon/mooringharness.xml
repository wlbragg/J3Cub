<PropertyList>

    <path>mooringharness.ac</path>
    <nopreview/>

    <animation>
        <type>select</type>
        <object-name>anchorharness</object-name>
        <condition>
            <and>
                <property>fdm/jsbsim/mooring/anchor-length</property>
                <property>fdm/jsbsim/mooring/rope-visible</property>
                <not>
                    <property>/sim/freeze/replay-state</property>
                </not>
                <property>/fdm/jsbsim/hydro/active-norm</property>
                <or>
                    <equals>
                        <property>/fdm/jsbsim/bushkit</property>
                        <value>2</value>
                    </equals>
                    <equals>
                        <property>/fdm/jsbsim/bushkit</property>
                        <value>3</value>
                    </equals>
                </or>
            </and>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>anchorharnessrelaxed</object-name>
        <condition>
            <and>
                <property>fdm/jsbsim/mooring/anchor-length</property>
                <not>
                    <property>fdm/jsbsim/mooring/rope-visible</property>
                </not>
                <not>
                    <property>/sim/freeze/replay-state</property>
                </not>
                <property>/fdm/jsbsim/hydro/active-norm</property>
                <or>
                    <equals>
                        <property>/fdm/jsbsim/bushkit</property>
                        <value>2</value>
                    </equals>
                    <equals>
                        <property>/fdm/jsbsim/bushkit</property>
                        <value>3</value>
                    </equals>
                </or>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>anchorrope</object-name>
        <condition>
            <and>
                <property>fdm/jsbsim/mooring/mooring-connected</property>
                <property>fdm/jsbsim/mooring/rope-visible</property>
            </and>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>anchorrope</object-name>
        <property>fdm/jsbsim/mooring/rope-yaw</property>
        <offset-deg>180</offset-deg>
        <center>
            <x-m>-1.67206</x-m>
            <y-m>-0.00119</y-m>
            <z-m>-2.0236 </z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>anchorrope</object-name>
        <property>orientation/pitch-deg</property>
        <factor>-1</factor>
        <center>
            <x-m>-1.67206</x-m>
            <y-m>-0.00119</y-m>
            <z-m>-2.0236 </z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>
