    <!-- Magneto switch -->
    <animation>
        <type>knob</type>
        <object-name>magneto_switch</object-name>
        <property>controls/engines/engine[0]/magnetos</property>
        <factor>-30</factor>
        <axis>
            <x> 0 </x>
            <y> 1 </y>
            <z> 0 </z>
        </axis>
        <center>
            <x-m> 0.3843 </x-m>
            <y-m>-0.2828 </y-m>
            <z-m> 0.085  </z-m>
        </center>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine[0]/magnetos</property>
                <factor>1</factor>
                <min>0</min>
                <max>3</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>magneto-switch</tooltip-id>
                <label>Magnetos: %s</label>
                <property>controls/engines/engine[0]/magnetos</property>
                <mapping>nasal</mapping>
                <script>
                    var m = arg[0];
                    if (m == 1) return 'RIGHT';
                    if (m == 2) return 'LEFT';
                    if (m == 3) return 'BOTH';
                    return 'OFF';
                </script>
            </binding>
        </hovered>
    </animation>

    <!-- Carb Heat -->
    <animation>
        <type>translate</type>
        <object-name>carb_heat</object-name>
