<?xml version="1.0"?>

<PropertyList>

     <params>
        <light>
          <power>/instrumentation/iat/power</power>
        </light>
    </params>

    <path>iat_pa18.ac</path>

    <!-- als effects -->
    <effect>
        <inherits-from>../../Effects/interior/lm-temp</inherits-from>
        <object-name>face</object-name>
        <object-name>marker</object-name>
        <object-name>bezelinside</object-name>
        <object-name>bezeloutside</object-name>
        <object-name>togglebase</object-name>
        <object-name>screws</object-name>
        <object-name>needle</object-name>
        <object-name>toggle</object-name>
    </effect>

    <model>
        <name>temp-led</name>
        <path>../../Effects/interior/procedural_light_instruments_medium.xml</path>
        <offsets>
            <x-m>-0.17693</x-m>
            <y-m>-0.07198</y-m>
            <z-m>-0.35959</z-m>
        </offsets>
        <condition>
            <and>
                <greater-than>
                    <property>/sim/model/material/instruments/factor</property>
                    <value>0</value>
                </greater-than>
                <greater-than>
                    <property>/sim/rendering/shaders/model</property>
                    <value>1</value>
                </greater-than>
            </and>
        </condition>
    </model>

    <!-- default renderer effect -->
    <animation>
        <type>material</type>
        <object-name>face</object-name>
        <object-name>marker</object-name>
        <object-name>bezelinside</object-name>
        <object-name>needle</object-name>
        <object-name>toggle</object-name>
        <condition>
            <not>
                <property>/sim/rendering/shaders/skydome</property>
            </not>
        </condition>
        <emission>
            <red-prop>/sim/model/material/instruments/default-red-combined-factor</red-prop>
            <green-prop>/sim/model/material/instruments/default-green-combined-factor</green-prop>
            <blue-prop>/sim/model/material/instruments/default-blue-combined-factor</blue-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>fdm/jsbsim/heat/air-temperature-powered</property>
        <factor>1</factor>
        <interpolation>
            <entry>
                <ind>-60</ind>
                <dep>127</dep>
            </entry>
            <entry>
                <ind>-50</ind>
                <dep>104</dep>
            </entry>
            <entry>
                <ind>-40</ind>
                <dep>82.5</dep>
            </entry>
            <entry>
                <ind>-30</ind>
                <dep>61.5</dep>
            </entry>
            <entry>
                <ind>-20</ind>
                <dep>41</dep>
            </entry>
            <entry>
                <ind>-10</ind>
                <dep>20</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>-21</dep>
            </entry>
            <entry>
                <ind>20</ind>
                <dep>-43</dep>
            </entry>
            <entry>
                <ind>30</ind>
                <dep>-64</dep>
            </entry>
            <entry>
                <ind>40</ind>
                <dep>-85</dep>
            </entry>
            <entry>
                <ind>50</ind>
                <dep>-106</dep>
            </entry>
            <entry>
                <ind>60</ind>
                <dep>-127</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>-0.17818</x-m>
            <y-m>-0.07168</y-m>
            <z-m>-0.37739</z-m>
        </center>
    </animation>

    <animation>
        <type>select</type>
        <object-name>mode</object-name>
        <condition>
            <property>/instrumentation/iat/power</property>
        </condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>mode</object-name>
        <emission>
            <red>  0.05</red>
            <green>1</green>
            <blue> 0.05</blue>
            <factor-prop alias="/params/light/power"/>
        </emission>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>toggle</object-name>
        <property>controls/thermometer/temp-mode</property>
        <factor>45</factor>
        <offset-deg>-20</offset-deg>
        <center>
            <x-m>-0.1794</x-m>
            <y-m>-0.08819</y-m>
            <z-m>-0.40674</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/thermometer/temp-mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>j3cub.click("light")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Temperature Mode</tooltip-id>
                <label>Position: %s</label>
                <property>controls/thermometer/temp-mode</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Indoor', 'Outdoor'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>mode</object-name>
        <property>controls/thermometer/temp-mode/</property>
        <bias>0.0001</bias>
        <factor>.062</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>-1</y>
        </axis>
    </animation>
</PropertyList>


