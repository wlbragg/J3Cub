    <animation>
        <type>knob</type>
        <object-name>autopilot-switch</object-name>
        <property>/it-stec55x/input/ap-master-switch</property>
        <factor>45</factor>
        <offset-deg>-20</offset-deg>
        <center>
            <x-m>0.003917</x-m>
            <y-m>0.090185</y-m>
            <z-m>-0.008422</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/it-stec55x/input/ap-master-switch</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    if (getprop("/it-stec55x/input/ap-master-switch") == 1) {
                      setprop("/it-stec55x/input/ap-master-sw", 0);
                      stec55x.button.DISC();
                    } else
                      setprop("/it-stec55x/input/ap-master-sw", 1);
                </script>
            </binding>
            <binding>
                <command>nasal</command>
                <script>j3cub.click("light")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>autopilot-switch</tooltip-id>
                <label>Position: %s</label>
                <property>/it-stec55x/input/ap-master-sw</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Off', 'On'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <!-- Electric Trim "spring switch" -->
    <animation>
        <type>knob</type>
        <object-name>autopilot-trim-switch</object-name>
        <property>/it-stec55x/input/man-trim</property>
        <factor>35</factor>
        <offset-deg>10</offset-deg>
        <center>
            <x-m> 0.003917</x-m>
            <y-m> 0.115527</y-m>
            <z-m>-0.008422</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/it-stec55x/input/man-trim</property>
                <factor>1</factor>
                <min>-1</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>j3cub.click("light")</script>
            </binding>
        </action>
        <release>
            <binding>
                <command>property-assign</command>
                <property>/it-stec55x/input/man-trim</property>
                <value>0</value>
            </binding>
        </release>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>direct-drive</tooltip-id>
                <label>Trim: %s</label>
                <property>/it-stec55x/input/man-trim</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Neutral', 'Increase', 'Decrease'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>
	
