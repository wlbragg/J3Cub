<?xml version="1.0"?>

<PropertyList>

    <path>dome-light.ac</path>

    <effect>
        <inherits-from>../../Effects/interior/j3cub-interior</inherits-from>
        <object-name>dome_light</object-name>
        <object-name>dome_togglebase</object-name>
        <object-name>dome_toggle</object-name>
    </effect>

    <model>
        <name>dome-light-right-led</name>
        <path>../../Effects/interior/procedural_light_instruments_small.xml</path>
        <offsets>
            <x-m>0.392</x-m>
            <y-m>0.2485</y-m>
            <z-m>0.028</z-m>
        </offsets>
        <condition>
            <and>
                <greater-than>
                    <property>/sim/model/pa-18/lightmap/dome/factor</property>
                    <value>0</value>
                </greater-than>
                <greater-than>
                    <property>/sim/rendering/shaders/model</property>
                    <value>1</value>
                </greater-than>
            </and>
        </condition>
    </model>
    <model>
        <name>dome-light-left-led</name>
        <path>../../Effects/interior/procedural_light_instruments_small.xml</path>
        <offsets>
            <x-m> 0.392</x-m>
            <y-m>-0.273</y-m>
            <z-m> 0.028</z-m>
        </offsets>
        <condition>
            <and>
                <greater-than>
                    <property>/sim/model/pa-18/lightmap/dome/factor</property>
                    <value>0</value>
                </greater-than>
                <greater-than>
                    <property>/sim/rendering/shaders/model</property>
                    <value>1</value>
                </greater-than>
            </and>
        </condition>
    </model>

    <animation>
        <type>material</type>
        <object-name>dome_lighton</object-name>
        <emission>
            <red>  1</red>
            <green>1</green>
            <blue> 1</blue>
            <factor-prop>/sim/model/pa-18/lightmap/dome/factor</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>dome_lighton</object-name>
        <nopreview/>
        <condition>
            <property>/sim/model/pa-18/lightmap/dome/factor</property>
        </condition>
    </animation>

    <!-- dome light switch -->
    <animation>
        <type>knob</type>
        <object-name>dome_toggle</object-name>
        <property>controls/switches/dome-light</property>
        <factor>45</factor>
        <offset-deg>-20</offset-deg>
        <center>
            <x-m>0.396337</x-m>
            <y-m>0.260165</y-m>
            <z-m>0.007365</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/switches/dome-light</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>j3cub.click("light")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Dome Light</tooltip-id>
                <label>Dome Light: %s</label>
                <property>controls/switches/dome-light</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Off', 'On'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

</PropertyList>
