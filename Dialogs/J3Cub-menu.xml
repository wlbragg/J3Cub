<?xml version="1.0"?>

<PropertyList>

  <default>

    <menu n="10">
      <label>J3Cub</label>
      <enabled type="bool">true</enabled>

      <item>
        <label>Sim Options</label>
        <binding>
          <command>dialog-show</command>
          <dialog-name>sim-dialog</dialog-name>
        </binding>
      </item>

      <item>
        <label>Aircraft Options</label>
        <binding>
          <command>dialog-show</command>
          <dialog-name>aircraft-dialog</dialog-name>
        </binding>
      </item>

      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>

      <item>
        <label>Registration</label>
        <binding>
          <command>dialog-show</command>
          <dialog-name>registration-dialog</dialog-name>
        </binding>
      </item>

      <item>
        <label>Flashlight</label>
        <binding>
          <command>nasal</command>
          <script>j3cub.toggle_flashlight()</script>
        </binding>
      </item>

      <item>
        <label>Display PFD</label>
        <binding>
          <command>nasal</command>
          <script>j3cub.toggle_fg1000_PFD()</script>
        </binding>
      </item>

      <item>
        <label>Display MFD</label>
        <binding>
          <command>nasal</command>
          <script>j3cub.toggle_fg1000_MFD()</script>
        </binding>
      </item>

      <item>
        <label>Mooring Parameters</label>
        <binding>
          <command>dialog-show</command>
          <dialog-name>mooring-dialog</dialog-name>
        </binding>
      </item>

      <item>
          <label>Save/Resume</label>
          <binding>
              <command>dialog-show</command>
              <dialog-name>save-dialog</dialog-name>
          </binding>
      </item>

      <item>
        <label>Autostart</label>
        <binding>
          <command>nasal</command>
          <script>j3cub.autostart()</script>
        </binding>
      </item>

    </menu>

  </default>

</PropertyList>
